{
  "compilerOptions": {
    // type checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // interop constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // environment
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "target": "ES2022",

    // modules
    "baseUrl": ".",
    "module": "nodenext",
    "types": ["node"], // disable implicit types

    // emit
    "declaration": true,
    "outDir": "./dist",
    "stripInternal": true,

    // completeness
    "skipLibCheck": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "example"]
}
